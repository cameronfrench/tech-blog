<!-- Login Form -->
<form class="login-form">
  <div class="mb-3">
    <label for="email-login" class="form-label">Email</label>
    <input type="email" class="form-control" id="email-login" placeholder="Enter your email">
  </div>
  <div class="mb-3">
    <label for="password-login" class="form-label">Password</label>
    <input type="password" class="form-control" id="password-login" placeholder="Enter your password">
  </div>
  <button type="submit">Login</button>
</form>

<!-- Signup Form -->
<form class="signup-form">
  <div class="mb-3">
    <label for="username-signup" class="form-label">Username</label>
    <input type="text" class="form-control" id="username-signup" placeholder="Choose a username">
  </div>
  <div class="mb-3">
    <label for="password-signup" class="form-label">Password</label>
    <input type="password" class="form-control" id="password-signup" placeholder="Choose a password">
  </div>
  <button type="submit">Sign Up</button>
</form>
